{
  "name": "@locl/app",
  "version": "0.0.1",
  "description": "Translation app by Locl",
  "main": "index.js",
  "author": {
    "name": "Olivier Combe",
    "email": "olivier@locl.app"
  },
  "homepage": "https://www.locl.app/",
  "repository": {
    "url": "https://github.com/loclapp/locl"
  },
  "license": "MIT",
  "build": {
    "appId": "com.locl.app",
    "productName": "App",
    "copyright": "Copyright Â© 2018-2019 locl",
    "asar": false,
    "npmRebuild": false,
    "directories": {
      "buildResources": "icons",
      "output": "../electronapp-packages"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "linux": {
      "icon": "icon.png",
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ],
      "synopsis": "App",
      "category": "Development"
    },
    "nsis": {
      "createDesktopShortcut": "always",
      "installerIcon": "icon.ico",
      "artifactName": "App-Setup-${version}.${ext}"
    }
  }
}
